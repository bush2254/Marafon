<Page x:Class="WpfApp12.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp12"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="160"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Button Click="Login" Grid.Column="1" Grid.Row="2" Content="Login" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="15"  Width="70" Height="30" Margin="15" Style="{StaticResource Button_2}"/>
        <Button Click="Login_2" Grid.ColumnSpan="2" Content="Я участвовал ранее" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="350" Height="70" FontSize="20" Margin="20"/>
        <Button Click="Regist" Grid.ColumnSpan="2" Grid.Row="1" Content="Я новый участник" VerticalAlignment="Top" HorizontalAlignment="Center" Width="350" Height="70" FontSize="20" Margin="20"/>
    </Grid>
    
</Page>
